<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:id="@+id/app"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:background="@drawable/result_card"
        android:layout_margin="@dimen/vertical_search"
        android:src="@drawable/playstore"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/horizontal_card"
        android:layout_height="match_parent">

        <TextView
            style="@style/viewParent.headerText"
            android:fontFamily="@font/bariol_regular"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:text="Other App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/viewParent.headerText"
            android:fontFamily="@font/bariol_regular"
            android:textSize="15sp"
            android:background="@drawable/result_card"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-30dp"
            android:text="New"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="50dp"
            android:layout_height="20dp" />

        <TextView
            android:fontFamily="@font/bariol_regular"
            android:text="Try our other applications"
            android:layout_marginTop="15sp"
            android:textColor="@color/bottomNavigationTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/nav_bar_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>